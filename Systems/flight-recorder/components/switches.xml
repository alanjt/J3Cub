<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <!-- ============================================================== -->
    <!-- Switches                                                       -->
    <!-- ============================================================== -->

    <!-- Parking brake -->
    <signal>
        <type>float</type>
        <property type="string">/sim/model/j3cub/brake-parking</property>
    </signal>

    <signal>
        <type>bool</type>
        <property type="string">/controls/engines/engine/primer-lever</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/switches/starter</property>
    </signal>
    <signal>
        <type>int8</type>
        <property type="string">/controls/switches/magnetos</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/switches/master-bat</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/switches/master-alt</property>
    </signal>
    <!-- Note: /controls/switches/master-avionics is set in
               Aircraft/Generic/flightrecorder/components/controls.xml.
    -->
    <signal>
        <type>bool</type>
        <property type="string">/controls/anti-ice/pitot-heat</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/environment/aircraft-effects/cabin-heat-set</property>
    </signal>

    <!-- Passengers and baggage -->
    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/inertia/pointmass-weight-lbs[0]</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/inertia/pointmass-weight-lbs[1]</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/inertia/pointmass-weight-lbs[10]</property>
    </signal>

    <!-- Lights -->
    <signal>
        <type>bool</type>
        <property type="string">/controls/lighting/nav-lights</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/lighting/beacon</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/lighting/strobe</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/lighting/landing-light</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/controls/lighting/taxi-light</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/sim/model/material/instruments/factor</property>
    </signal>

    <!-- ============================================================== -->
    <!-- Doors and Windows                                              -->
    <!-- ============================================================== -->

    <signal>
        <type>float</type>
        <property type="string">/sim/model/door-positions/rightDoor/position-norm</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/sim/model/door-positions/rightWindow/position-norm</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/sim/model/drums/rotate/position-norm</property>
    </signal>

</PropertyList>
