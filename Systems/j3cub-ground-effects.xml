                    <switch>
                        <property>bushkit</property>

                        <!-- Default/35"/pontoon/amphibious/skis -->
                        <value>  0.00</value>
                        <value>  0.00</value>
                        <value>  0.00</value>
                        <value>  0.00</value>
                        <value>  0.00</value>
                        <value>  0.00</value>
                        <value>-81.00 </value>
                    </switch>
                </ifthen>
            </function>
        </fcs_function>

        <fcs_function name="z-position-left-gear">
            <output>gear/unit[1]/z-position</output>
