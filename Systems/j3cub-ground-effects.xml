                    <switch>
                        <property>bushkit</property>
                        <value> -78.70 </value>
                        <value> -86.00 </value>
                        <value>   0.00 </value>
                        <value>   0.00 </value>
                        <value> -86.00 </value>
                        <value>   0.00 </value>
                        <value> -85.00 </value>
                    </switch>
                </ifthen>
            </function>
        </fcs_function>

        <fcs_function name="z-position-right-gear">
            <output>gear/unit[2]/z-position</output>
